<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="190dp" >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="@+id/txtCliente"
            app:layout_constraintTop_toBottomOf="@+id/txtCliente">


            <EditText
                android:id="@+id/txtCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:ems="10"
                android:hint="@string/contaReceberNomeCliente"
                android:inputType="textPersonName"
                android:text=""
                app:layout_constraintEnd_toStartOf="@+id/chkMesAtual"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/txtData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="512dp"
                android:layout_marginBottom="60dp"
                android:ems="10"
                android:hint="@string/contaReceberData"
                android:inputType="textPersonName"
                android:text=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btnBuscar"
                android:layout_width="84dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="408dp"
                android:layout_marginBottom="56dp"
                android:text="Buscar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtData" />

            <CheckBox
                android:id="@+id/chkMesAtual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="MÃªs Atual"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/chkAberto"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.898" />

            <CheckBox
                android:id="@+id/chkQuitado"
                android:layout_width="86dp"
                android:layout_height="32dp"
                android:layout_marginBottom="25dp"
                android:text="Quitado"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txtData" />

            <CheckBox
                android:id="@+id/chkAberto"
                android:layout_width="99dp"
                android:layout_height="31dp"
                android:text="Em aberto"
                app:layout_constraintBaseline_toBaselineOf="@+id/chkQuitado"
                app:layout_constraintEnd_toEndOf="@+id/txtData" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="900dp" />

</LinearLayout>